@using LibraryAPI.DTOs;
@model CreateBookDTO

@{
	ViewData["Title"] = "Create Book";
}

<h1>Create New Book</h1>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="CreateBook">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Author" class="control-label"></label>
				<input asp-for="Author" class="form-control" />
				<span asp-validation-for="Author" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Genre" class="control-label"></label>
				<input asp-for="Genre" class="form-control" />
				<span asp-validation-for="Genre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PublishingYear" class="control-label"></label>
				<input asp-for="PublishingYear" class="form-control" />
				<span asp-validation-for="PublishingYear" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NumberInStock" class="control-label"></label>
				<input asp-for="NumberInStock" class="form-control" />
				<span asp-validation-for="NumberInStock" class="text-danger"></span>
			</div>
			<div class="from-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="BookIndex">Back To List</a>
</div>
@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
