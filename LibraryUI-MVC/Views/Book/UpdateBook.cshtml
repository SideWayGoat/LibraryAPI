@using LibraryAPI.DTOs
@model UpdateBookDTO

@{
	ViewData["Title"] = "Update Book Information";
}

<div class="row">
	<div class="col-md-4">
		<form asp-action="UpdateBook">
			<input asp-for="id" hidden />
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Author" class="control-label"></label>
				<input asp-for="Author" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Genre" class="control-label"></label>
				<input asp-for="Genre" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="PublishingYear" class="control-label"></label>
				<input asp-for="PublishingYear" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="NumberInStock" class="control-label"></label>
				<input asp-for="NumberInStock" class="form-control" />
			</div>
			<div class="from-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="BookIndex">Back To List</a>
</div>